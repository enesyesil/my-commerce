model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  cart     Cart[]
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  cartItems   Cart[] // Add this field to create the opposite relation
}

model Cart {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
